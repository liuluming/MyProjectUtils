            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/home_map_position"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClick">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_dingwei" />

                    <TextView
                        android:id="@+id/dingwei"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@string/myfont"
                        android:gravity="center"
                        android:text="定位"
                        android:textColor="@color/fontcolor"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_personal_center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:onClick="onClick">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_gerenzhognxin" />

                    <TextView
                        android:id="@+id/gerenzhongxin"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@string/myfont"
                        android:gravity="center"
                        android:text="个人中心"
                        android:textColor="@color/fontcolor"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_odu_alarm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onClick">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_shipinhuiyi" />

                    <TextView
                        android:id="@+id/tv_odu_alarm"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@string/myfont"
                        android:gravity="center"
                        android:text="天线告警"
                        android:textColor="@color/fontcolor"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_trunk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:onClick="onClick">

                    <com.my51c.see51.app.view.CircleIntersectView
                        android:id="@+id/iv_aggregated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        />

                    <TextView
                        android:id="@+id/tv_home_trunk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@string/myfont"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="链路聚合"
                        android:layout_below="@id/iv_aggregated"
                        android:textColor="@color/fontcolor"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>