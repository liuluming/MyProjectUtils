<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/top_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/channel_name"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <EditText
                android:id="@+id/et_service_name"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="@dimen/DIMEN_70PX"
                android:layout_marginRight="10dp"
                android:background="@drawable/superset_kongbai"
                android:fontFamily="@string/myfont"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:layout_alignParentRight="true"
                android:textColor="@color/fontcolor"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_sour_ip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="源IP："
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <EditText
                android:id="@+id/et_sour_ip"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="@dimen/DIMEN_70PX"
                android:layout_marginRight="10dp"
                android:background="@drawable/superset_kongbai"
                android:fontFamily="@string/myfont"
                android:gravity="center"
                android:singleLine="true"
                android:digits="1234567890."
                android:text=""
                android:layout_alignParentRight="true"
                android:textColor="@color/fontcolor"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_sour_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="源端口:"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <EditText
                android:id="@+id/et_sour_port"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="@dimen/DIMEN_70PX"
                android:layout_marginRight="10dp"
                android:background="@drawable/superset_kongbai"
                android:fontFamily="@string/myfont"
                android:inputType="number"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:layout_alignParentRight="true"
                android:textColor="@color/fontcolor"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_dest_ip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="目标IP："
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <EditText
                android:id="@+id/et_dest_ip"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="@dimen/DIMEN_70PX"
                android:layout_marginRight="10dp"
                android:background="@drawable/superset_kongbai"
                android:fontFamily="@string/myfont"
                android:gravity="center"
                android:singleLine="true"
                android:digits="1234567890."
                android:text=""
                android:layout_alignParentRight="true"
                android:textColor="@color/fontcolor"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_dest_port"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="目标端口:"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <EditText
                android:id="@+id/et_dest_port"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="@dimen/DIMEN_70PX"
                android:layout_marginRight="10dp"
                android:background="@drawable/superset_kongbai"
                android:fontFamily="@string/myfont"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:layout_alignParentRight="true"
                android:textColor="@color/fontcolor"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_net_protocol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="网络协议："
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <Spinner
                android:id="@+id/spinner_protocol_mode"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="wrap_content"
                android:background="@drawable/xialaspinner"
                android:spinnerMode="dropdown"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_30PX" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_service_priority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="优先级："
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <EditText
                android:id="@+id/et_service_priority"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="@dimen/DIMEN_70PX"
                android:layout_marginRight="10dp"
                android:background="@drawable/superset_kongbai"
                android:fontFamily="@string/myfont"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:layout_alignParentRight="true"
                android:textColor="@color/fontcolor"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <TextView
            android:id="@+id/super_bw_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/DIMEN_30PX"
            android:text="业务传输策略"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/DIMEN_30PX" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_90PX"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/bw_service_celue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="传输链路"
                android:textColor="@color/fontcolor"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:textSize="@dimen/DIMEN_25PX" />

            <Spinner
                android:id="@+id/sp_service_mode"
                android:layout_width="@dimen/DIMEN_200PX"
                android:layout_height="wrap_content"
                android:background="@drawable/xialaspinner"
                android:spinnerMode="dropdown"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_30PX" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_service_channels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="聚合链路："
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <GridView
                android:id="@+id/gv_service_channels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/transparent"
                android:layout_marginLeft="10dp"
                android:numColumns="2"
                android:listSelector="@color/transparent"></GridView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_service_net"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="网络适配器："
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_25PX" />
            <GridView
                android:id="@+id/gv_net_channels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/transparent"
                android:layout_marginLeft="10dp"
                android:numColumns="2"
                android:listSelector="@color/transparent"></GridView>
        </LinearLayout>
        <com.came.viewbguilib.ButtonBgUi
            android:id="@+id/bt_service_save"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_30PX"
            android:textColor="@color/white"
            android:clickable="true"
            app:defaultColor="#90A4AE"
            app:raoundRadius="5dp"
            app:isRipple="false"
            android:text="保存"
            >
        </com.came.viewbguilib.ButtonBgUi>
    </LinearLayout>
</LinearLayout>
</ScrollView>