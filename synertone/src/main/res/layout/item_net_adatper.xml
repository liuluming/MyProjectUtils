<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_corner_white_bg_gray_stroke"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:id="@+id/tv_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络适配器名称"
            android:textSize="@dimen/one_title"
            android:textColor="@color/black"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_adapter_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_adapter_name"
            android:textSize="@dimen/one_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/iv_adapter_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iv_see_details"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receive"
                android:textSize="@dimen/three_title"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_receive_byte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/three_title"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:textSize="@dimen/three_title"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_send_byte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/three_title"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_adapter_restart"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/iv_adapter_restart"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_amend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/iv_amend"
            />
        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@drawable/iv_del"
            />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
