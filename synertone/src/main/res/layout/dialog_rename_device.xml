<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/super_ref_statrtnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_weight="1"
            android:fontFamily="@string/myfont"
            android:text="卫星编号"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/DIMEN_30PX" />


        <EditText
            android:id="@+id/et_star_name"
            android:layout_width="@dimen/DIMEN_180PX"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@drawable/superset_kongbai"
            android:fontFamily="@string/myfont"
            android:gravity="center"
            android:inputType="textLongMessage"
            android:maxLength="8"
            android:maxLines="1"
            android:singleLine="true"
            android:text="--"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/DIMEN_30PX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dangqiaojin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_weight="1"
            android:fontFamily="@string/myfont"
            android:text="卫星经度"
            android:textColor="@color/fontcolor"
            android:textSize="@dimen/DIMEN_30PX" />

        <Spinner
            android:id="@+id/super_ref_mdqjd1"
            android:layout_width="@dimen/DIMEN_180PX"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@drawable/superset_tianchong"
            android:entries="@array/onestart_spinner"
            android:spinnerMode="dropdown"

            />

        <EditText
            android:id="@+id/et_star_lat_lng"
            android:layout_width="@dimen/DIMEN_180PX"
            android:layout_height="@dimen/DIMEN_70PX"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@drawable/superset_kongbai"
            android:fontFamily="@string/myfont"
            android:gravity="center"
            android:maxLength="8"
            android:maxLines="1"
            android:singleLine="true"
            android:text="--"
            android:textColor="@color/fontcolor" />
    </LinearLayout>
    <!--  <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/device_name_edit"
         android:hint="Input name" /> -->
</LinearLayout>