<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.my51c.see51.app.activity.aggregation.TrunkActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#90A4AE">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/running_statu_icon_back"
            android:onClick="refTrunkOnFinish" />

        <TextView
            android:id="@+id/super_truck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imageButton1"
            android:fontFamily="@string/myfont"
            android:text="@string/link_truck"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_38PX" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:divider="@drawable/shape_divider"
        android:showDividers="middle">
        <LinearLayout
            android:id="@+id/ll_trunk_net"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trunk_net"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_30PX" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/come_btn" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_trunk_channel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trunk_channel"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/come_btn" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_trunk_link"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trunk_link_configuration"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/come_btn" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_trunk_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trunk_service"
                android:textColor="@color/fontcolor"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/come_btn" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:layout_gravity="center"
            android:background="#CFCFCF" />
        <LinearLayout
            android:id="@+id/ll_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="@dimen/DIMEN_150PX"
            android:layout_marginRight="@dimen/DIMEN_150PX"
            android:gravity="center">
            <Button
                android:id="@+id/app_configuration"
                style="@style/ButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/app_configuration" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>