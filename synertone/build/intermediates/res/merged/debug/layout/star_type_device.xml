<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_100PX"
        android:background="#E0E0E0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:fontFamily="@string/myfont"
            android:text="天线类型"
            android:textColor="@color/fontcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_tianxianstyle"
            android:layout_width="@dimen/DIMEN_180PX"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="@drawable/superset_tianchong"
            android:entries="@array/tianxian_style"
            android:spinnerMode="dropdown" />
    </LinearLayout>

</LinearLayout>
